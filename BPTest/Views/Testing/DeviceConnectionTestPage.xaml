<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BPTest.Views.Testing.DeviceConnectionTestPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Connect" Command="{Binding ConnectCommand}" TextColor="Black"/>
            <Button Text="Disconnect" Command="{Binding DisconnectCommand}" TextColor="Black" />
            <Button Text="Load Device" Command="{Binding LoadDevice}" TextColor="Black" />
            <Entry Text="{Binding DeviceId}" TextColor="Black" />
            <Button Text="Load Status" Command="{Binding LoadState}" TextColor="Black" />
            <Label Text="{Binding ConnectionState}" TextColor="Black"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>